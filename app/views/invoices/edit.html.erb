<style type="text/css">
div.canvas{ width: 100%; }

div.canvas-body{
  padding-top: 2em;
  width: 90%;
  min-width: 900px; 
  margin: 0 auto; 
  position: relative;
}

div.canvas-inner{
  width: 100%;
  border: 1px solid green; 
  float: left; 
}

div.invoice{
  width: 30%; 
  float: left; 
}
div.work_week{
  width: 70%; 
  border-left: 1px solid green; 
  border-bottom: 1px solid green; 
  float: right; 
}
div.work_week_last{
  border-bottom: 0;
}
div.section{
  padding: 1em;
}
div.invoice textarea, 
div.work_week textarea{
  width: 100%; 
  height: 5em;
}

div.invoice h1{
  margin-top: 0;
  padding-top: 0;
}

div.invoice textarea{
  height: 10em;
}

.comp-started-at, 
.comp-notes, 
.comp-hours, 
.actions
{
  float: left; 
  clear: both; 
}

.comp-notes{
width: 100%; 
}

.comp-ended-at, 
.comp-invoice-id
{
  float: right; 
}
</style>


<div class="canvas">
<div class="canvas-body">
<div class="canvas-inner">
  <div class="section invoice">
<h1>Editing Invoice</h1>
<%= render 'form' %>
<%= link_to 'Show', @invoice %> |
<%= link_to 'Back', invoices_path %>
  </div>
  <div class="work_weeks">
    <div class="section work_week work_week_1">
<h3>Work Week 1</h3>
<%= render partial: 'work_weeks/form', locals: {work_week: @invoice.work_weeks[0]} %>
    </div>
    <div class="section work_week work_week_last work_week_2">
<h3>Work Week 2</h3>
<%= render partial: 'work_weeks/form', locals: {work_week: @invoice.work_weeks[1]} %>
    </div>
  </div>
</div>
</div>
</div>

